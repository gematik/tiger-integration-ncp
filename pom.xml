<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>de.gematik</groupId>
    <artifactId>tiger-integration-ncp</artifactId>
    <version>1.5.2-SNAPSHOT</version>
    <packaging>jar</packaging>
    <properties>
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>
        <version.java>17</version.java>
        <org.projectlombok.version>1.18.24</org.projectlombok.version>
        <jackson.version>2.15.2</jackson.version>
        <cxf.version>4.0.2</cxf.version>
        <jaxb.version>4.0.3</jaxb.version>
        <version.maven-testrun-plugins>3.0.0-M8</version.maven-testrun-plugins>
        <log4j.version>2.18.0</log4j.version>
        <slf4j.version>2.0.4</slf4j.version>
        <junit.version>5.9.3</junit.version>
        <version.mockito>5.4.0</version.mockito>
        <tiger.version>2.1.6</tiger.version>
        <epa-fdv.version>2.8.11</epa-fdv.version>
        <epa-ps.version>1.2.1</epa-ps.version>
        <lib-ihe-xds.version>1.0.3</lib-ihe-xds.version>
        <ncpeh-simulation-api.version>1.5.0</ncpeh-simulation-api.version>
        <local.config.default>localConfigDefault</local.config.default>
        <resources.folder>src/main/resources</resources.folder>
        <resources-not-in-jar.folder>not-in-jar</resources-not-in-jar.folder>
        <template.warning>DO NOT EDIT THIS FILE MANUALLY, as it is generated from a template and will be overwritten with every build</template.warning>
        <templates.folder>${resources-not-in-jar.folder}/templates</templates.folder>
        <generated-not-in-jar.folder>${project.build.directory}/generated-not-in-jar</generated-not-in-jar.folder>
        <!-- Depdendencies from gematik parent-->
        <version.mockito>2.23.4</version.mockito>
        <version.jacoco-maven-plugin>0.8.8</version.jacoco-maven-plugin>
    </properties>
    <dependencies>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <version>${org.projectlombok.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.cxf</groupId>
            <artifactId>cxf-rt-rs-client</artifactId>
            <version>${cxf.version}</version>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.datatype</groupId>
            <artifactId>jackson-datatype-joda</artifactId>
            <version>${jackson.version}</version>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.dataformat</groupId>
            <artifactId>jackson-dataformat-xml</artifactId>
            <version>${jackson.version}</version>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.jakarta.rs</groupId>
            <artifactId>jackson-jakarta-rs-json-provider</artifactId>
            <version>${jackson.version}</version>
        </dependency>
        <dependency>
            <groupId>com.sun.xml.bind</groupId>
            <artifactId>jaxb-impl</artifactId>
            <version>${jaxb.version}</version>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>${slf4j.version}</version>
        </dependency>
        <dependency>
            <groupId>de.gematik.test</groupId>
            <artifactId>tiger-test-lib</artifactId>
            <version>${tiger.version}</version>
            <exclusions>
                <exclusion>
                    <groupId>org.apache.logging.log4j</groupId>
                    <artifactId>log4j-api</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>de.gematik.api</groupId>
            <artifactId>ncpeh-simulation-ehdsi-model</artifactId>
            <version>${ncpeh-simulation-api.version}</version>
        </dependency>
        <dependency>
            <groupId>de.gematik.api</groupId>
            <artifactId>ncpeh-simulation-td-api</artifactId>
            <version>${ncpeh-simulation-api.version}</version>
        </dependency>
        <dependency>
            <groupId>de.gematik.epa</groupId>
            <artifactId>lib-ihe-xds</artifactId>
            <version>${lib-ihe-xds.version}</version>
        </dependency>
        <dependency>
            <groupId>de.gematik.epa</groupId>
            <artifactId>epa-ps-sim-api</artifactId>
            <version>${epa-ps.version}</version>
        </dependency>
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-core</artifactId>
            <version>${version.mockito}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.vintage</groupId>
            <artifactId>junit-vintage-engine</artifactId>
            <version>${junit.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <build>
        <resources>
            <resource>
                <directory>${project.basedir}/${resources.folder}</directory>
                <excludes>
                    <exclude>${resources-not-in-jar.folder}/**</exclude>
                </excludes>
            </resource>
            <resource>
                <!-- Replace placeholder in tiger yaml files and copy them into the base directory -->
                <filtering>true</filtering>
                <directory>${project.basedir}/${resources.folder}/${templates.folder}</directory>
                <targetPath>${generated-not-in-jar.folder}</targetPath>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>${version.jacoco-maven-plugin}</version>
                <executions>
                    <execution>
                        <id>prepare-agent</id>
                        <goals>
                            <goal>prepare-agent</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>report</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>report</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.spotify.fmt</groupId>
                <artifactId>fmt-maven-plugin</artifactId>
                <version>2.19</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>format</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>${version.maven-testrun-plugins}</version>
                <configuration>
                    <includes>de.gematik.unittest.**</includes>
                    <systemPropertyVariables>
                        <NCP_TEST_LOCAL_CFG>${local.config.default}</NCP_TEST_LOCAL_CFG>
                    </systemPropertyVariables>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <configuration>
                    <outputDirectory>${project.build.directory}/externalJars</outputDirectory>
                    <overWriteIfNewer>true</overWriteIfNewer>
                    <artifactItems>
                        <artifactItem>
                            <groupId>de.gematik.api</groupId>
                            <artifactId>ncpeh-simulation-mock</artifactId>
                            <version>${ncpeh-simulation-api.version}</version>
                            <type>jar</type>
                            <outputDirectory>${project.build.directory}/externalJars</outputDirectory>
                        </artifactItem>
                        <artifactItem>
                            <groupId>de.gematik.epa</groupId>
                            <artifactId>epa-ps-sim-app</artifactId>
                            <version>${epa-ps.version}</version>
                            <type>jar</type>
                            <outputDirectory>${project.build.directory}/externalJars</outputDirectory>
                        </artifactItem>
                    </artifactItems>
                </configuration>
                <executions>
                    <execution>
                        <id>copy</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>de.gematik.test</groupId>
                <artifactId>tiger-maven-plugin</artifactId>
                <version>${tiger.version}</version>
                <executions>
                    <execution>
                        <configuration>
                            <glues>
                                <glue>de.gematik.test.ncp.glue</glue>
                            </glues>
                        </configuration>
                        <phase>generate-test-sources</phase>
                        <id>prepare-and-verify-tiger-tests-and-results</id>
                        <goals>
                            <goal>generate-drivers</goal>
                        </goals>
                    </execution>
                    <execution>
                        <goals>
                            <goal>generate-serenity-reports</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-failsafe-plugin</artifactId>
                <version>${version.maven-testrun-plugins}</version>
                <configuration>
                    <forkedProcessExitTimeoutInSeconds>18000</forkedProcessExitTimeoutInSeconds>
                    <forkNode implementation="org.apache.maven.plugin.surefire.extensions.SurefireForkNodeFactory" />
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>integration-test</goal>
                            <goal>verify</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>jenkinsBuild</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-failsafe-plugin</artifactId>
                        <configuration>
                            <systemPropertyVariables>
                                <cucumber.filter.tags>@CI</cucumber.filter.tags>
                                <tiger.servers.epaPsJar.active>false</tiger.servers.epaPsJar.active>
                                <tiger.servers.epaPsUrl.active>false</tiger.servers.epaPsUrl.active>
                                <tiger.lib.activateWorkflowUi>false</tiger.lib.activateWorkflowUi>
                                <NCP_TEST_LOCAL_CFG>${local.config.default}</NCP_TEST_LOCAL_CFG>
                            </systemPropertyVariables>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>test</id>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-failsafe-plugin</artifactId>
                        <configuration>
                            <systemPropertyVariables>
                                <cucumber.filter.tags>not @Ignore</cucumber.filter.tags>
                            </systemPropertyVariables>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>skipBuild</id>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-clean-plugin</artifactId>
                        <configuration>
                            <skip>true</skip>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>com.spotify.fmt</groupId>
                        <artifactId>fmt-maven-plugin</artifactId>
                        <configuration>
                            <skip>true</skip>
                        </configuration>
                    </plugin>
                    <plugin>
                        <artifactId>maven-resources-plugin</artifactId>
                        <configuration>
                            <skip>true</skip>
                        </configuration>
                    </plugin>
                    <plugin>
                        <artifactId>maven-compiler-plugin</artifactId>
                        <configuration>
                            <skip>true</skip>
                        </configuration>
                    </plugin>
                    <plugin>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <skip>true</skip>
                        </configuration>
                    </plugin>
                    <plugin>
                        <artifactId>maven-jar-plugin</artifactId>
                        <configuration>
                            <skip>true</skip>
                        </configuration>
                    </plugin>
                    <plugin>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <configuration>
                            <skip>true</skip>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
